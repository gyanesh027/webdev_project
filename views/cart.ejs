// ‚≠ê REMOVE COUPON LISTENER HERE ‚≠ê
// ----------------------------------
document.getElementById('remove-coupon-btn').addEventListener('click', async () => {
    try {
        const res = await fetch('/remove-coupon', { method: "POST" });
        const data = await res.json();

        if (data.success) {
            alert("Coupon removed! Original price restored.");
            cartPage.loadCart();
        } else {
            alert(data.message);
        }
    } catch (err) {
        console.error("Failed to remove coupon", err);
        alert("Failed to remove coupon");
    }
});
    
        
    
    </script>
