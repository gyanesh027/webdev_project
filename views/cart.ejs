    <script>
          class CartPage {
        constructor() {
            this.listEl = document.getElementById('cart-list');
            this.totalEl = document.getElementById('total-price');
            this.loadCart();
        }

        async loadCart() {
            try {
                const res = await fetch('/userdata');
                const data = await res.json();
                this.items = data.cart || [];
                this.cartTotal = data.price;    /* FIXED */
                this.render();
            } catch (err) {
                console.error('Failed to load cart', err);
            }
        }

        async removeItem(title) {
            try {
                await fetch('/remove-from-cart', {
                    method: 'POST',
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ title })
                });
                this.loadCart();
            } catch (err) {
                console.error('Failed to remove item', err);
            }
        }

        render() {
            this.listEl.innerHTML = '';
            if (!this.items || this.items.length === 0) {
                this.listEl.innerHTML = `<li style="justify-content:center; font-style:italic;">Your cart is empty!</li>`;
                document.querySelector('.checkout-btn').style.display = 'none';
                this.totalEl.innerText = '0.00';
                return;
            }

            document.querySelector('.checkout-btn').style.display = 'block';

            let total = 0;
            this.items.forEach(item => total += parseFloat(item.price));

            if (this.cartTotal) total = parseFloat(this.cartTotal);

            this.items.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <img src="${item.image}" alt="${item.title}">
                    <div class="item-details">${item.title}</div>
                    <div class="item-price">$${parseFloat(item.price).toFixed(2)}</div>
                    <button class="remove-btn" onclick="cartPage.removeItem('${item.title}')">Remove</button>
                `;
                this.listEl.appendChild(li);
            });

            this.totalEl.innerText = total.toFixed(2);
        }
    }

    const cartPage = new CartPage();

    async function loadUser() {
        try {
            const res = await fetch('/userdata');
            const data = await res.json();
            document.getElementById('username').textContent = data.username || "Guest";
        } catch (err) {
            console.error('Failed to load user data', err);
        }
    }
    loadUser();
    document.getElementById('apply-coupon-btn').addEventListener('click', async () => {
    const code = document.getElementById('coupon-code').value.trim();
    if (!code) return alert('Please enter a coupon code');

    try {
        const res = await fetch('/apply-coupon', {
            method: 'POST',
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ code })
        });

        const data = await res.json();

        if (data.success) {
            alert(`Coupon applied! New total: $${data.newTotal.toFixed(2)}`);
            cartPage.loadCart();
        } else {
            alert(data.message || 'Invalid coupon');
        }
    } catch (err) {
        console.error('Failed to apply coupon', err);
        alert('Failed to apply coupon');
    }
});

