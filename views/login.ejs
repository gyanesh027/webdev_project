<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Game Store Login & Signup</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Anton&family=Dancing+Script:wght@600&family=Poppins:wght@400;600;700&display=swap"
        rel="stylesheet"
    />
    <style>
        /* CSS Variables (from previous pages) */
        :root {
            --bg-dark: #0a0a0a;
            --accent: #ff0000;
            --accent-hover: #cc0000;
            --muted: #ffffff;
            --dark-grey: #1a1a1a;
            --medium-grey: #2a2a2a;
            --light-grey: #3a3a3a;
            --text-grey: #999999;
            --transition-fast: 0.3s;
        }

        /* üñºÔ∏è B A C K G R O U N D I M A G E A S I S üñºÔ∏è */

        /* Global Styles */
        body { 
            font-family: "Poppins", Arial, sans-serif; 
            text-align: center; 
            padding: 50px; 
            color: var(--muted);
            min-height: 100vh;
            
            /* --- Background Image Properties --- */
            background-color: var(--bg-dark);
            background-image: url("/public/webdev_image.png"); 
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            /* Position relative is still useful for context but the overlay is removed */
            position: relative; 
            z-index: 1; 
        }

        /* Dark Overlay for Readability (REMOVED: The body::before block is gone) */

        h1, h2 {
            position: static; 
        }
        
       h1 {
    font-size: 50px;
    margin-bottom: 30px;
    background: linear-gradient(50deg, #ff4d4d, #ff0000);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-transform: uppercase;
    letter-spacing: 3px;

}
        
        h2 {
            color: var(--muted);
            margin-top: 5px;
            margin-bottom: 20px;
        }

        /* Input Fields */
        input { 
            padding: 12px; 
            margin: 8px 0; 
            width: 90%; 
            border: 2px solid var(--medium-grey); 
            background-color: var(--dark-grey); 
            color: var(--muted);
            border-radius: 8px;
            transition: border-color var(--transition-fast);
        }
        
        input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 5px rgba(255, 0, 0, 0.5);
        }

        /* Buttons (Submit) */
        button { 
            padding: 12px 25px; 
            margin-top: 20px; 
            cursor: pointer; 
            border: none;
            border-radius: 30px;
            font-weight: 600;
            font-size: 16px;
            /* Red Gradient Theme */
            background: linear-gradient(135deg, var(--accent), #ff3366);
            color: #fff;
            box-shadow: 0 4px 15px rgba(255, 0, 0, 0.3);
            transition: all var(--transition-fast);
        }
        
        button:hover {
            background: linear-gradient(135deg, var(--accent-hover), #cc2855);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 0, 0, 0.5);
        }

        /* Tabs */
        .tab { 
            display: inline-block; 
            padding: 10px 20px; 
            margin: 0 5px; 
            cursor: pointer; 
            /* Themed base color */
            background: var(--medium-grey); 
            color: var(--text-grey);
            border-radius: 8px 8px 0 0; 
            transition: all var(--transition-fast);
        }
        
        .tab:hover {
            color: var(--muted);
            background: var(--light-grey);
        }

        .active-tab { 
            /* Themed active color (Red accent) */
            background: var(--accent) !important; 
            color: white !important; 
            font-weight: 700;
            box-shadow: 0 -3px 10px rgba(255, 0, 0, 0.3);
        }

        /* Form Container */
        .form-container { 
            /* Dark background for the form box */
            background: var(--dark-grey);
            border: 2px solid var(--accent); 
            padding: 30px 20px; 
            
            /* Uniform corner radius */
            border-radius: 15px; 
            
            display: none; 
            width: 300px;
            margin: auto; 
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.7);
        }
        
        .form-container.active { 
            display: block; 
        }
        
        /* Switch Links */
        p {
            margin-top: 15px;
            color: var(--text-grey);
            font-size: 14px;
        }
        
        a, 
        #switch-to-login, 
        #switch-to-signup { 
            text-decoration: none; 
            /* Red Accent for links */
            color: var(--accent); 
            cursor: pointer;
            font-weight: 600;
            transition: color var(--transition-fast);
        }
        
        a:hover, 
        #switch-to-login:hover, 
        #switch-to-signup:hover {
            color: #ff3366;
        }
    </style>
</head>
<body>

<h1>Game Store</h1>

<div>
    <span class="tab active-tab" id="signup-tab">Signup</span>
    <span class="tab" id="login-tab">Login</span>
</div>

<div class="form-container active" id="signup-form">
    <h2>Signup</h2>
    <form id="signupForm">
        <input type="text" name="username" placeholder="Username" required><br>
        <input type="password" name="password" placeholder="Password" required><br>
        <button type="submit">Sign Up</button>
    </form>
    <p>Already have an account? <span id="switch-to-login">Login here</span></p>
</div>

<div class="form-container" id="login-form">
    <h2>Login</h2>
    <form id="loginForm">
        <input type="text" name="username" placeholder="Username" required><br>
        <input type="password" name="password" placeholder="Password" required><br>
        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <span id="switch-to-signup">Sign up here</span></p>
</div>

<script>
const signupTab = document.getElementById("signup-tab");
const loginTab = document.getElementById("login-tab");
const signupFormContainer = document.getElementById("signup-form");
const loginFormContainer = document.getElementById("login-form");
const switchToLogin = document.getElementById("switch-to-login");
const switchToSignup = document.getElementById("switch-to-signup");

signupTab.addEventListener("click", () => {
    signupTab.classList.add("active-tab");
    loginTab.classList.remove("active-tab");
    signupFormContainer.classList.add("active");
    loginFormContainer.classList.remove("active");
});

loginTab.addEventListener("click", () => {
    loginTab.classList.add("active-tab");
    signupTab.classList.remove("active-tab");
    loginFormContainer.classList.add("active");
    signupFormContainer.classList.remove("active");
});

switchToLogin.addEventListener("click", () => loginTab.click());
switchToSignup.addEventListener("click", () => signupTab.click());

// Handle Signup
document.getElementById("signupForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const form = e.target;
    const username = form.username.value;
    const password = form.password.value;

    try {
        const res = await fetch("http://localhost:3000/signup", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: new URLSearchParams({ username, password })
        });

        if (res.redirected) {
            window.location.href = res.url;
        } else {
            const text = await res.text();
            alert(text);
        }
    } catch (err) {
        alert("Server error. Try again later.");
        console.error(err);
    }
});

// Handle Login
document.getElementById("loginForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const form = e.target;
    const username = form.username.value;
    const password = form.password.value;

    try {
        const res = await fetch("http://localhost:3000/login", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: new URLSearchParams({ username, password })
        });

        if (res.redirected) {
            window.location.href = res.url;
        } else {
            const text = await res.text();
            alert(text);
        }
    } catch (err) {
        alert("Server error. Try again later.");
        console.error(err);
    }
});
</script>

</body>
</html>